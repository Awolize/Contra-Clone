#include "UserInput.h"


void UserInput::pressedKey(bool pressed, sf::Keyboard::Key key)
{
	switch (key)
	{ 	
	case sf::Keyboard::W: 	
	    up = pressed; 	
	    break; 	
	case ::sf::Keyboard::S: 
	    down = pressed; 
	    break; 	
	case sf::Keyboard::A: 
	    left = pressed; 
	    break; 	
	case sf::Keyboard::D:
		right = pressed;
		break; 
	default: 	
	    break; 	
	} 
}
